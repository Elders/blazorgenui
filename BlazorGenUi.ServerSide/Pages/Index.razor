@page "/"
@using ObjectsClassLibrary
@using BlazorGenUI.Components.Renderable

<RenderableContentControl Context="TestObject"></RenderableContentControl>
<EditForm Model="this">
    <InputCheckbox @bind-Value="IsChecked" />

</EditForm>

@code
{
    public TestDto TestObject { get; set; }

    private bool _isChecked;
    public bool IsChecked
    {
        get => _isChecked;
        set
        {
            _isChecked = value;
            if (value)
                TestObject.TestInteger = 25;
        }
    }

    protected override void OnInitialized()
    {
        TestObject = new TestDto()
        {
            TestString = "ahoj",
            TestInteger = 15,
            ListOfIntegers = new List<int>() { 1, 2, 3, 4 },
            Entity = new TestEntity(){Name = "janko", Surname = "Spavor", Age = 14}
        };
    }
}
@page "/list"
@using ObjectsClassLibrary
@using FestivalProject.BL.Models.FestivalDto
@using FestivalProject.DAL.Enums


<h1>ListView</h1>

@if (TestList == null)
{
    <p>Loading</p>
}
else
{
    <div class="container">
        <div class="row">
            <div class="container">
                <ul class="list-group">
                    @foreach (var festival in TestList)
                    {
                        <NavLink class="no-text-decoration" href="@($"/Festival/{festival.Id}")">
                            <li class="list-group-item d-flex justify-content-start">
                                <div style="width: 25% !important">
                                    <div class="img" style="background-image: url('@festival.LogoUri');">
                                    </div>
                                </div>
                                <div style="width:73%; margin-top: 1.5em; padding-left: 2%">
                                    <h2>@festival.Name</h2>
                                    <p>@festival.Country</p>
                                    <p>@festival.Genre</p>
                                    <div class="d-flex justify-content-between">
                                        <p>@festival.City</p>
                                        <NavLink type="button" class="btn btn-success" href="@($"/Goods/{festival.Id}")" style="margin: -0.4em 0.4em; width: 4.5em; height: 2.3em;">
                                            Detail
                                        </NavLink>
                                    </div>
                                </div>



                            </li>
                        </NavLink>
                    }
                </ul>
            </div>
        </div>
    </div>
}





@page "/detail"
@using FestivalProject.BL.Models.FestivalDto
@using FestivalProject.DAL.Enums
<div class="container">
    <h1>@TestDetail.Name</h1>
    <div class="mdb-lightbox">
        <a href="@TestDetail.LogoUri">
            <div style="width: 25% !important">
                <div class="img" style="background-image: url('@TestDetail.LogoUri');">
                </div>
            </div>
        </a>


        <div class="table-responsive">
            <table class="table table-sm table-borderless mb-0">
                <tbody>
                    <tr>
                        <th class="pl-0 w-25" scope="row">
                            <strong>@nameof(TestDetail.Genre):</strong>
                        </th>
                        <td>@TestDetail.Genre</td>
                    </tr>
                    <tr>
                        <th class="pl-0 w-25" scope="row">
                            <strong>@nameof(TestDetail.Country):</strong>
                        </th>
                        <td>@TestDetail.Country</td>
                    </tr>
                    <tr>
                        <th class="pl-0 w-25" scope="row">
                            <strong>@nameof(@TestDetail.City):</strong>
                        </th>
                        <td>
                            @TestDetail.City
                        </td>
                    </tr>
                <tr>
                        <th class="pl-0 w-25" scope="row">
                            <strong>@nameof(@TestDetail.StartTime):</strong>
                        </th>
                        <td>
                            @TestDetail.StartTime
                        </td>
                    </tr>
                    <tr>
                        <th class="pl-0 w-25" scope="row">
                            <strong>@nameof(@TestDetail.Capacity):</strong>
                        </th>
                        <td>
                            @TestDetail.Capacity
                        </td>
                    </tr>
                    <tr>
                        <th class="pl-0 w-25" scope="row">
                            <strong>@nameof(@TestDetail.Price):</strong>
                        </th>

                        <td>
                            @TestDetail.Price €
                        </td>

                    </tr>
                </tbody>
            </table>
        </div>





    </div>
</div>

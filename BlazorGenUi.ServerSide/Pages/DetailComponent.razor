<h1>EditView</h1>

<EditForm Model="@TestDetail" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="container">
        <div row="1">
            <div class="form-group">
                <label>@nameof(TestDetail.Name)</label>
                <InputText @bind-Value="TestDetail.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label>LogoUri</label>
                <InputText @bind-Value="TestDetail.LogoUri" class="form-control" />
            </div>
            <div class="form-group">
                <label>Genre</label>
                <InputSelect @bind-Value="TestDetail.Genre" class="form-control">
                    <option value="">Select Genre</option>
                    <option value="Exploration">Exploration</option>
                    <option value="Diplomacy">Diplomacy</option>
                    <option value="Defense">Defense</option>
                </InputSelect>

            </div>
            <div class="form-group">
                <label>Country</label>
                <InputSelect @bind-Value="TestDetail.Genre" class="form-control">
                    <option value="">Select Country</option>
                    <option value="Exploration">Exploration</option>
                    <option value="Diplomacy">Diplomacy</option>
                    <option value="Defense">Defense</option>
                </InputSelect>

            </div>

            <div class="form-group">
                <label>City</label>
                <InputText @bind-Value="TestDetail.City" class="form-control" />
            </div>
        </div>
        <div row="2">
            <div class="form-group">
                <label>Description</label>
                <InputTextArea @bind-Value="TestDetail.Description" class="form-control" />
            </div>
            <div class="form-group">
                <label>StarTime</label>
                <InputDate @bind-Value="TestDetail.StartTime" class="form-control" />
            </div>
            <div class="form-group">
                <label>Capacity</label>
                <InputNumber @bind-Value="TestDetail.Capacity" class="form-control" />
            </div>
            <div class="form-group">
                <label>Price</label>
                <InputNumber @bind-Value="TestDetail.Price" class="form-control" />
            </div>
       

            <button disabled="@loading" class="btn btn-primary">
                @if (loading)
                {
                    <span class="spinner-border spinner-border-sm mr-1"></span>
                }
                Save
            </button>
        </div>
    </div>

</EditForm>

